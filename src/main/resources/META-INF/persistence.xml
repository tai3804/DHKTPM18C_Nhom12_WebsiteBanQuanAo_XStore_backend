<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">
    <persistence-unit name="xstore">
        <class>xstore.model.User</class>
        <class>xstore.model.Product</class>
        <class>xstore.model.Order</class>
        <class>xstore.model.UserType</class>
        <class>xstore.model.OrderStatus</class>
        <class>xstore.model.Address</class>
        <class>xstore.model.Cart</class>
        <class>xstore.model.Account</class>
        <class>xstore.model.CartID</class>
        <class>xstore.model.CartItem</class>
        <class>xstore.model.DetailOrder</class>
        <class>xstore.model.DetailOrderID</class>
        <class>xstore.model.Discount</class>
        <class>xstore.model.Favourite</class>
        <class>xstore.model.FavouriteID</class>
        <class>xstore.model.Role</class>
        <class>xstore.model.Unit</class>
        <class>xstore.model.Stock</class>
        <class>xstore.model.Role</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/xstore"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="root"/>

            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>
